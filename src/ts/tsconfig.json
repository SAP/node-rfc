{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "target": "ESNext",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "allowJs": false,
    "stripInternal": true,
    "listFiles": true,
    "removeComments": true,
    "lib": ["esnext"],
    "outDir": "../../lib",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
